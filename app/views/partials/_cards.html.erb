


<% @preguntas.each do |pr| %>


<!-- Ventana Modal (Para la configuracion) -->
<div class="modal fade" id="luis<%=(pr.Numero-1)%>">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Setup</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>


      <div class="modal-body">

<!--opciones de respuesta de la ventana modal-->
<!--opciones de respuesta de la ventana modal-->

       <% [0, 1, 2].each do |num2| %>   
        
         <div class="form-check">
          <label class="form-check-label">


          <%if num2 == 0%>
    
           <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios<%=num2%>" value="<%= @respuestas[num2]%>" checked >

          <%else%>

            <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios<%=num2%>" value="<%= @respuestas[num2]%>">
          
          <%end%>   

            <%= @respuestas[num2]%>

            </label>      

          </div>


        <% end %>          

      </div>
     
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary answer_choice" id="answer<%=(pr.Numero-1)%>">Save changes</button>
      </div>
    </div>
  </div>
</div>






<div class="card text-center">

  <!-- Cabecera de la tarjeta -->
  <div class="card-header" style="color: white">
    <span class="card-header-title">Question <%=pr.Numero%> - Integrated Civics (Symbols)</span>
    <a href="#" data-toggle="modal" data-target="#luis<%=(pr.Numero-1)%>" class="float-right">
        <span class="fa fa-cog fa-2x" style="color: white" aria-hidden="true" title="Metodo de Luis" ></span>
      </a>
  </div>

  <!-- Contenido de la tarjeta -->
  <div class="card-block">
    <div class="card-block-img">
      <img src="<%= image_url('secreto.png') %>" data-img="<%= image_url('photo'+(pr.Numero).to_s+'.png') %>">
    </div>

    <div class="card-block-main">
      <span class="card-block-main-question"><%= pr.Descripcion %></span>

      <br /><br />
      <button class="btn btn-info mostrar" type="button">Show Answer</button>    
      <div class="respuesta hidden" >
        <span class="card-block-main-answer" id="respuesta<%=(pr.Numero-1)%>"></span>
        <br /><br />
        
        <div style="display:block;"> <!-- Se oculta para la opcion de luis -->
          <% pr.CivicAnswers.each do |re| %>
          <span class="card-block-main-answer"><%= re.Descripcion %></span>
          <br /><br />
          <% end %>
        </div>

        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#modalwin">More Info</button>
        
      </div>  
    </div>

    <div class="float-right">
      <% if pr.Numero == 1 %>
      <span class="fa fa-check-circle fa-2x" style="color: #32CD32" aria-hidden="true" title="Good" ></span>
      <% elsif pr.Numero == 2 %>
      <span class="fa fa-times-circle fa-2x" style="color: #FF4500" aria-hidden="true" title="Bad" ></span>
      <% else %>
      <span class="fa fa-trophy fa-2x" style="color: #FFD700" aria-hidden="true" title="The best" ></span>
      <% end %>
    </div>
  </div>

  <!-- Pie de la tarjeta -->
  <div class="card-footer text-muted"> </div>

  <!-- Contenido oculto, texto asociado a la pregunta -->
  <div class="card-info hidden"><%= pr.Informacion %></div>
</div>
<br />
<br />
<br />

<% end %>


<!-- Ventana Modal (La que muestra la informacion) -->
<div class="modal fade" id="modalwin" tabindex="-1" role="dialog" aria-labelledby="ModalWindow" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      
      <div class="modal-header">
        <h4 class="modal-title">Question Information</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <p id="modalwin-text"></p>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
      </div>

    </div>
  </div>
</div>